let
    type IntList = { head: int, tail: IntList }
    function sum(xs : IntList) : int = if xs = nil then 0 else xs.head + sum(xs.tail)
    var xs := IntList { head=42
                      , tail=IntList { head=1
                                     , tail=IntList { head=2
                                                    , tail=nil } } }
in
    print(itoa(sum(xs)))
end